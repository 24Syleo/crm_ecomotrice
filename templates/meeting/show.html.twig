{% extends 'base.html.twig' %}

{% block title %}Meeting
{% endblock %}

{% block body %}

	<a class="btn success" href="{{ path('app_meeting.download', { 'id' : meeting.id }) }}">Télécharger</a>

	<table class="table">
		<tbody>
			<tr>
				<th>StartDate</th>
				<td>{{ meeting.startDate ? meeting.startDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>EndDate</th>
				<td>{{ meeting.endDate ? meeting.endDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Subject</th>
				<td>{{ meeting.subject }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ meeting.address }}</td>
			</tr>
			<tr>
				<th>Details</th>
				<td>{{ meeting.details }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn warning" href="{{ path('app_customer.index') }}">back to list</a>

	{{ include('meeting/_delete_form.html.twig') }}
{% endblock %}
